        {# Gravatar's section #}
        <div class="col-md-3 col-sm-3 col-xs-3 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
            <img alt="{{ app.user.username }}'s avatar" src="{{ gravatar_profile.uri(app.user.email) }}">
