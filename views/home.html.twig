{% extends 'layout.html.twig' %}

{% block keywords %}
    Notepad
{% endblock %}

{% block meta_tags %}{% endblock %}

{% block stylesheet_block %}{% endblock %}

{% block title %}
    {% trans %}home{% endtrans %}
{% endblock %}

{% block content %}
    <section class="row">
        <div class="col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
            <h1>{% trans %}home{% endtrans %}</h1>

            {# Tab menu #}
            <ul class="nav nav-tabs nav-justified">
                {% for label in labels %}
                    {% if loop.first %}
                        <li class="active">
                    {% else %}
                        <li>
                    {% endif %}
                    <a href="#{{ label.title|lower|replace({' ' : '_'}) }}" data-toggle="tab">
                        {{ label.title|capitalize }}
                    </a>
                    </li>
                {% endfor %}
            </ul>

            {# Tab content #}
            <div id="ticket-tab-content" class="row tab-content">
                {% for ticket in tickets %}
                {% if loop.first or ticket.label.title == labels|first.title %}
                <section class="tab-pane fade in active ticket-section col-lg-4 col-md-4 col-sm-6 col-xs-12" id="{{ ticket.label.title|lower|replace({' ' : '_'}) }}">
                    {% else %}
                    <section class="tab-pane fade ticket-section col-lg-4 col-md-4 col-sm-6 col-xs-12" id="{{ ticket.label.title|lower|replace({' ' : '_'}) }}">
                        {% endif %}
                        <h2>{{ ticket.title }}</h2>
                        <p>{{ ticket.content }}</p>
                    </section>
                    {% else %}
                        <p>No ticket found.</p>
                    {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}
