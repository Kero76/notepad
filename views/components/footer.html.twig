{% block footer_date_block %}
    {% if website.currentYear == website.releaseYear %}
        {{ website.currentYear }}
    {% else %}
        {{ website.releaseYear }} - {{ website.currentYear }}
    {% endif %}
{% endblock footer_date_block %}


{% block footer_block %}
<div class="row">
    <footer class="col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-sm-offset-1 col-xs-offset-1">
        <p class="col-md-offset-5 col-sm-offset-5 col-xs-offset-5">
            Notepad &copy; {{ block('footer_date_block') }}, {% trans %}copyright{% endtrans %}.
        </p>
    </footer>
</div>
{% endblock footer_block %}
